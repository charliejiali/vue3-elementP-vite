{
  "compilerOptions": {
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "es6"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["types/*"]
    },
    "types": [
      "node",
      "vite/client",
      "vite-plugin-svg-icons/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "auto-imports.d.ts",
    "vite.config.ts",
    "src/settings.ts"
  ]
}
